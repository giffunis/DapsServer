<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Form Name</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="name">Nombre</label>
  <div class="col-md-4">
  <input id="name" name="name" placeholder="Nombre" class="form-control input-md" required="" type="text">

  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="secondName">Apellidos</label>
  <div class="col-md-4">
  <input id="secondName" name="secondName" placeholder="Apellidos" class="form-control input-md" required="" type="text">

  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="birthdate">Fecha de nacimiento</label>
  <div class="col-md-4">
  <input id="birthdate" name="birthdate" placeholder="10/03/1993" class="form-control input-md" required="" type="text">

  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="sex">Sexo</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="sex-0">
      <input name="sex" id="sex-0" value="Masculino" checked="checked" type="radio">
      Masculino
    </label>
	</div>
  <div class="radio">
    <label for="sex-1">
      <input name="sex" id="sex-1" value="Femenino" type="radio">
      Femenino
    </label>
	</div>
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="dni">DNI</label>
  <div class="col-md-4">
  <input id="dni" name="dni" placeholder="X0000000X" class="form-control input-md" required="" type="text">

  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="mobileNumber">Tlf de contacto</label>
  <div class="col-md-4">
  <input id="mobileNumber" name="mobileNumber" placeholder="677999999" class="form-control input-md" type="text">

  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="contactPerson">Persona de contacto</label>
  <div class="col-md-4">
  <input id="contactPerson" name="contactPerson" placeholder="Familiar, etc." class="form-control input-md" type="text">

  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="personTlf">Tlf de la persona de contacto</label>
  <div class="col-md-4">
  <input id="personTlf" name="personTlf" placeholder="677999999" class="form-control input-md" type="text">

  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="smoker">Fumador</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="smoker-0">
      <input name="smoker" id="smoker-0" value="true" checked="checked" type="radio">
      Sí
    </label>
	</div>
  <div class="radio">
    <label for="smoker-1">
      <input name="smoker" id="smoker-1" value="false" type="radio">
      No
    </label>
	</div>
  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="memoryProblems">Familiares con transtorno congnitivo</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="memoryProblems-0">
      <input name="memoryProblems" id="memoryProblems-0" value="true" checked="checked" type="radio">
      Sí
    </label>
	</div>
  <div class="radio">
    <label for="memoryProblems-1">
      <input name="memoryProblems" id="memoryProblems-1" value="false" type="radio">
      No
    </label>
	</div>
  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="heartCondition">Familiares con afecciones cardiacas</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="heartCondition-0">
      <input name="heartCondition" id="heartCondition-0" value="true" checked="checked" type="radio">
      Sí
    </label>
	</div>
  <div class="radio">
    <label for="heartCondition-1">
      <input name="heartCondition" id="heartCondition-1" value="false" type="radio">
      No
    </label>
	</div>
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="others">Otros</label>
  <div class="col-md-4">
    <textarea class="form-control" id="others" name="others">Más información...</textarea>
  </div>
</div>

<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="Crear">Crear</label>
  <div class="col-md-8">
    <button id="Crear" name="Crear" class="btn btn-success">Crear</button>
    <button id="Borrar" name="Borrar" class="btn btn-danger">Borrar</button>
  </div>
</div>

</fieldset>
</form>
