<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="unSolvedQuizes">
        <thead>
            <tr>
                <th>Autor</th>
                <th>Test</th>
                <th>NºPreguntas</th>
                <th>Link</th>
                <th>Añadir al paciente</th>
            </tr>
        </thead>
        <% if (quizes) { %>
          <tbody>
            <% for (var i = 0; i < quizes.length; i++) { %>
              <tr class="gradeA">
                  <td class="center"><%= quizes[i].doctor %></td>
                  <td class="center"><%= quizes[i].quizName %></td>
                  <td class="center"><%= quizes[i].nQuestions %></td>
                  <td class="center"><a href="/quiz/<%= quizes[i]._id %>">ver</a></td>
                  <td class="center"> <form  method="post" action="/patient/<%= patient._id %>/quiz/add?_method=put">
                    <div class="form-group" style="display:none">
                      <input id="addQuiz" name="addQuiz"  value="<%= quizes[i]._id %>">
                    </div>
                    <button type="submit" class="btn btn-success">Añadir</button>
                  </form> </td>
                  <!-- <td class="center"><a href="/patient/<%= patient._id %>/quiz/add/<%=quizes[i]._id %>">añadir</a></td> -->
              </tr>
            <% } %>
          </tbody>
        <% } %>
    </table>
</div>
<!-- /.table-responsive -->
