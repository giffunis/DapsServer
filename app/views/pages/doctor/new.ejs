<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head %>

    <!-- Custom CSS -->
    <link href="/css/login.css" rel="stylesheet">

  </head>
  <body>
    <div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3" id="logo">
              <div class="login-panel panel panel-default" id="panel">
                  <div class="panel-heading">
                      <h3 class="panel-title">AÃ±adir un nuevo doctor</h3>
                  </div>
                  <div class="panel-body">
                    <% include ../../partials/errorValidate %>
                      <form role="form" method="post" action="/doctor/new">
                          <fieldset>
                              <div class="form-group">
                                  <input class="form-control" id="username"  name="doctor[username]" value="doctor[username]" autofocus required>
                              </div>
                              <div class="form-group">
                                  <input class="form-control" placeholder="Password" name="doctor[password]" type="password" required>
                              </div>
                              <div class="form-group">
                                <input type="text" class="form-control" name="doctor[name_and_surname]" value"doctor[name_and_surname]" required>
                              </div>
                              <div class="form-group">
                                <input type="number" class="form-control" name="doctor[colegiado]" value="doctor[colegiado]" required>
                              </div>
                              <div class="form-group">
                                <input type="text" class="form-control" name="doctor[especialidad]" value="doctor[especialidad]">
                              </div>
                              <div class="form-group">
                                <input type="email" class="form-control" name="doctor[email]" value="doctor[email]" required>
                              </div>
                              <div class="form-group">
                                <input type="tel" class="form-control" name="doctor[mobile]" value="doctor[mobile]">
                              </div>
                              <!-- Change this to a button or input when using this as a form -->
                              <button type="submit" name="commit" class="btn btn-success">Registrar</button>
                          </fieldset>
                      </form>
                  </div>
              </div>
          </div>
      </div>
    </div>
    <% include ../../partials/scripts_footer %>
  </body>
</html>
